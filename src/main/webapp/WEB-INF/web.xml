<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>SkillServlet</servlet-name>
        <servlet-class>ua.epam6.IOCRUD.rest.SkillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>ua.epam6.IOCRUD.rest.AccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeveloperServlet</servlet-name>
        <servlet-class>ua.epam6.IOCRUD.rest.DeveloperServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SkillServlet</servlet-name>
        <url-pattern>/api/v1/skills</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/api/v1/accounts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeveloperServlet</servlet-name>
        <url-pattern>/api/v1/developers</url-pattern>
    </servlet-mapping>
</web-app>